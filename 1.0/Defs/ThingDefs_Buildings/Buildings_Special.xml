<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Psychic Pylon -->
  <ThingDef ParentName="BuildingBase">
    <defName>VFES_PsychicPylon</defName>
    <label>psychic pylon</label>
    <description>An ancient device that projects a strong psychic drone around itself. Works through walls.</description>
    <graphicData>
      <texPath>Things/Security/Psychic/PsychicPylon_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(5,5)</drawSize>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0.0, 0.0, -0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0,0.75,1.0,0.5)</rect>
      </damageData>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <uiIconPath>Things/Security/Psychic/PsychicPylon_MenuIcon</uiIconPath>
    <uiIconScale>0.9</uiIconScale>
    <tickerType>Normal</tickerType>
    <thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    <costList>
      <Plasteel>40</Plasteel>
      <Uranium>40</Uranium>
      <Gold>20</Gold>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.25</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_PsychicDrone" />
      <!-- <li Class="CompProperties_AnimalInsanityPulser" /> -->
    </comps>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MarketValue>1500</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>0</Beauty>
      <Mass>20</Mass>
      <WorkToBuild>50000</WorkToBuild>
    </statBases>
    <building>
        <expandHomeArea>false</expandHomeArea>
    </building>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory> <!-- Only for Test Purposes -->
    <fillPercent>0.7</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <pathCost>70</pathCost>
    <rotatable>false</rotatable>
    <stealable>false</stealable>
    <canOverlapZones>false</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <specialDisplayRadius>14.9</specialDisplayRadius>
    <tradeability>Sellable</tradeability>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>LongRangeMineralScanner</li>
    </researchPrerequisites> <!-- Remove on Release -->
  </ThingDef>

</Defs>