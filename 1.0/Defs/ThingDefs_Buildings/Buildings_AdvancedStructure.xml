<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Deployable Barrier -->
  <ThingDef ParentName="BuildingBase">
    <defName>VFES_DeployableBarrier</defName>
    <label>deployable barrier</label>
    <description>A submersible barrier, which acts as a normal floor tile when turned off. Provides an excellent amount of cover from ranged attacks.</description>
    <graphicData>
      <texPath>Things/Security/BarrierDeployed/BarrierDeployed_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <size>(1,1)</size>
    <techLevel>Industrial</techLevel>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.7</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>70</pathCost>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <selectable>true</selectable>
    <stealable>false</stealable>
    <holdsRoof>false</holdsRoof>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <repairEffect>ConstructMetal</repairEffect>
    <statBases>
      <MaxHitPoints>600</MaxHitPoints>
      <Mass>15</Mass>
      <WorkToBuild>3000</WorkToBuild>
      <Flammability>0.4</Flammability>
      <Beauty>-1</Beauty>
    </statBases>
    <costList>
      <Steel>8</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Flickable"/>
      <li Class="VFESecurity.CompProperties_Retractable">
        <retractedPassability>Standable</retractedPassability>
        <retractedGraphicData>
          <texPath>Things/Security/BarrierDeployed/BarrierSubmerged_south</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(1,1)</drawSize>
          <damageData>
            <cornerTL>Damage/Corner</cornerTL>
            <cornerTR>Damage/Corner</cornerTR>
            <cornerBL>Damage/Corner</cornerBL>
            <cornerBR>Damage/Corner</cornerBR>
          </damageData>
        </retractedGraphicData>
        <ticksToRetract>120</ticksToRetract>
        <ticksToDeploy>120</ticksToDeploy>
      </li>
      <li Class="VFESecurity.CompProperties_TerrainSetter">
        <terrainDef>Concrete</terrainDef>
      </li>
    </comps>
    <!-- <staticSunShadowHeight>0.5</staticSunShadowHeight> -->
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
      <expandHomeArea>false</expandHomeArea>
    </building>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>VFES_ConcealedDefenses</li>
    </researchPrerequisites>
  </ThingDef>

  <!-- Floor Turret -->
  <ThingDef ParentName="BuildingBase">
    <defName>VFES_Turret_FloorTurret</defName>
    <label>floor turret</label>
    <description>An automatic, submersible turret with two machine guns on top. Requires steel to refurbish its barrel after heavy use. May explode when damaged. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>Things/Building/Floor/TurretFloor_Base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(0.27,0.25,0.27)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <size>(1,1)</size>
    <techLevel>Industrial</techLevel>
    <uiIconPath>Things/Building/Floor/TurretFloor_MenuIcon</uiIconPath>
    <uiIconScale>0.90</uiIconScale>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <costList>
      <Steel>200</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>0.4</Flammability>
      <WorkToBuild>7500</WorkToBuild>
      <Mass>14</Mass>
      <Beauty>-20</Beauty>
    </statBases>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.75</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>120</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="VFESecurity.CompProperties_Retractable">
        <retractedPassability>Standable</retractedPassability>
        <retractedGraphicData>
          <texPath>Things/Building/Floor/TurretFloorSubmerged_south</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(1,1)</drawSize>
          <damageData>
            <cornerTL>Damage/Corner</cornerTL>
            <cornerTR>Damage/Corner</cornerTR>
            <cornerBL>Damage/Corner</cornerBL>
            <cornerBR>Damage/Corner</cornerBR>
          </damageData>
        </retractedGraphicData>
        <ticksToRetract>120</ticksToRetract>
        <ticksToDeploy>120</ticksToDeploy>
      </li>
      <li Class="VFESecurity.CompProperties_TerrainSetter">
        <terrainDef>Concrete</terrainDef>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shots until barrel change</fuelLabel>
        <fuelGizmoLabel>Barrel durability</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>150</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>3</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Needs new barrel</outOfFuelMessage>
        <fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
      </li>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <hasTooltip>true</hasTooltip>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>24.9</specialDisplayRadius>
    <building>
      <expandHomeArea>false</expandHomeArea>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>VFES_Gun_FloorTurret</turretGunDef>
      <turretBurstCooldownTime>4.8</turretBurstCooldownTime>
      <turretTopGraphicPath>Things/Building/Floor/TurretFloor_Top</turretTopGraphicPath>
      <turretTopOffset>(0, 0.3)</turretTopOffset>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
    </placeWorkers>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>VFES_ConcealedDefenses</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BaseHumanGun">
    <defName>VFES_Gun_FloorTurret</defName>
    <label>floor turret doublegun</label>
    <description>Two simple automatic guns made to be mounted on a turret.</description>
    <graphicData>
      <texPath>Things/Building/Floor/TurretFloor_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <menuHidden>true</menuHidden>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.72</AccuracyTouch>
      <AccuracyShort>0.68</AccuracyShort>
      <AccuracyMedium>0.42</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>4.8</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <weaponTags Inherit="false">
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MiniTurret</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>24.9</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>4</burstShotCount>
        <soundCast>GunShotA</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
  </ThingDef>

  <!-- HMG Complex (3.15,1.45) -->
  <ThingDef ParentName="BuildingBase">
    <defName>VFES_Turret_HMGComplex</defName>
    <label>HMG complex</label>
    <description>A stationary heavy machingun supported by some sandbags to grant cover.</description>
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>Things/Security/HMGComplex/HMGComplex</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.15,1.45)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(0.27,0.25,0.27)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <uiIconPath>Things/Security/HMGComplex/HMGComplex_MenuIcon</uiIconPath>
    <uiIconScale>0.90</uiIconScale>
    <size>(3,1)</size>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>true</rotatable>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <statBases>
      <MaxHitPoints>175</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>5250</WorkToBuild>
      <Mass>14</Mass>
      <Beauty>-20</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>0.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.85</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shots until out of ammo</fuelLabel>
        <fuelGizmoLabel>Ammo</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>150</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>2</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Out of ammo</outOfFuelMessage>
        <fuelIconPath>UI/Overlays/FuelAmmo</fuelIconPath>
      </li>
    </comps>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <castEdgeShadows>true</castEdgeShadows>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.65</fillPercent>
    <hasTooltip>true</hasTooltip>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>24.9</specialDisplayRadius>
    <building>
      <expandHomeArea>false</expandHomeArea>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>VFES_Gun_HMGComplex</turretGunDef>
      <turretBurstCooldownTime>4.8</turretBurstCooldownTime>
      <turretTopGraphicPath>Things/Security/HMGComplex/HMGComplexGun</turretTopGraphicPath>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
    </placeWorkers>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>VFES_TrenchWarfare</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BaseHumanGun">
    <defName>VFES_Gun_HMGComplex</defName>
    <label>mounted HMG</label>
    <description>A mounted variant of a heavy machine gun.</description>
    <graphicData>
      <texPath>Things/Security/HMGComplex/HMGComplexGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <menuHidden>true</menuHidden>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.45</AccuracyTouch>
      <AccuracyShort>0.53</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>2.6</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <weaponTags Inherit="false">
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VFES_Bullet_HMGComplex</defaultProjectile>
        <warmupTime>2.4</warmupTime>
        <range>25.9</range>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <burstShotCount>5</burstShotCount>
        <soundCast>VFES_Shot_HMG</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>VFES_Bullet_HMGComplex</defName>
    <label>HMG bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>14</damageAmountBase>
      <armorPenetrationBase>0.5</armorPenetrationBase>
      <stoppingPower>3</stoppingPower>
      <speed>40</speed>
    </projectile>
  </ThingDef>

</Defs>