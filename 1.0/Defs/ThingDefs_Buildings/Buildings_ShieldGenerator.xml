<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Small Shield Generator -->
  <ThingDef ParentName="BuildingBase">
    <defName>VFES_ShieldGenerator_Small</defName>
    <label>small shield generator</label>
    <description>An ultratech device that projects a potent energy field around itself to protect everything inside, but consumes a huge amount of power when active. Works through walls.</description>
    <graphicData>
      <texPath>Things/Security/ShieldGenerator/Small/ShieldGenerator1x1</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,1)</drawSize>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0.0, 0.0, -0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0,0.75,1.0,0.5)</rect>
      </damageData>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <thingClass>VFESecurity.Building_Shield</thingClass>
    <tickerType>Normal</tickerType>
    <passability>PassThroughOnly</passability>
    <stealable>false</stealable>
    <rotatable>true</rotatable>
    <thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
    <costList>
      <Steel>150</Steel>
      <Plasteel>50</Plasteel>
      <ComponentSpacer>8</ComponentSpacer>
    </costList>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>EMP</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.6</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>2900</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>0.2</Flammability>
      <Beauty>-20</Beauty>
      <Mass>50</Mass>
      <WorkToBuild>40000</WorkToBuild>
      <VFES_EnergyShieldEnergyMax>11</VFES_EnergyShieldEnergyMax>
      <VFES_EnergyShieldRechargeRate>1.04</VFES_EnergyShieldRechargeRate>
      <VFES_EnergyShieldRadius>7.9</VFES_EnergyShieldRadius>
    </statBases>
    <fillPercent>0.35</fillPercent>
    <pathCost>70</pathCost>
    <canOverlapZones>true</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <specialDisplayRadius>7.9</specialDisplayRadius>
    <tradeability>Sellable</tradeability>
    <building>
      <expandHomeArea>false</expandHomeArea>
    </building>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>VFES_RepulsorTechnology</li>
    </researchPrerequisites>
    <modExtensions>
      <li Class="VFESecurity.ExtendedBuildingProperties">
        <inactiveShieldGenPowerConsumption>300</inactiveShieldGenPowerConsumption>
      </li>
    </modExtensions>
  </ThingDef>

