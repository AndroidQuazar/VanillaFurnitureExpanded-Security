<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Barbed Wire -->
  <ThingDef ParentName="BuildingBase">
    <defName>VFES_BarbedWire</defName>
    <label>barbed wire</label>
    <description>A type of steel fencing wire consisting of sharp edges and points arranged at intervals. Not only does it slow movement of enemies, but it inflicts cuts and puncture wounds.</description>
    <thingClass>Building_TrapDamager</thingClass>
    <graphicData>
      <texPath>Things/Security/BarbedWire/BarbedWire_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom8</li>
      </linkFlags>
      <damageData>
        <rect>(0,0,1,0.15)</rect>
      </damageData>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <uiIconPath>Things/Security/BarbedWire/BarbedWire_MenuIcon</uiIconPath>
    <blockLight>false</blockLight>
    <blockWind>false</blockWind>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <coversFloor>false</coversFloor>
    <pathCost>210</pathCost>    <!-- How difficult it is to cross the obstacle-->
    <pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <neverMultiSelect>false</neverMultiSelect>
    <holdsRoof>false</holdsRoof>
    <altitudeLayer>Building</altitudeLayer>
    <drawerType>MapMeshAndRealTime</drawerType>    <!-- MapMeshOnly -->
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <stealable>false</stealable>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <statBases>
      <Mass>1.5</Mass>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>225</WorkToBuild>
      <Flammability>0</Flammability>
      <Beauty>-4</Beauty>
      <TrapMeleeDamage>8</TrapMeleeDamage>
      <TrapSpringChance>0.95</TrapSpringChance>
    </statBases>
    <minifiedDef>MinifiedThing</minifiedDef>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>
    <designationCategory>Security</designationCategory>
    <building>
      <isTrap>true</isTrap>
      <trapPeacefulWildAnimalsSpringChanceFactor>0</trapPeacefulWildAnimalsSpringChanceFactor>
      <trapDestroyOnSpring>false</trapDestroyOnSpring>
      <trapDamageCategory>Sharp</trapDamageCategory>
      <expandHomeArea>false</expandHomeArea>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Things/Security/BarbedWire/BarbedWire_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <damageMultipliers>
      <li>
        <damageDef>Cut</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
    <repairEffect>ConstructMetal</repairEffect>
    <researchPrerequisites>
      <li>VFES_TrenchWarfare</li>
    </researchPrerequisites>
  </ThingDef>

  <!-- Trench -->
  <ThingDef ParentName="BuildingBase">
    <defName>VFES_Trench</defName>
    <label>trench</label>
    <description>A long, narrow ditch dug into the ground. Crossing it requires climbing up and down, therefore it significantly slows down movement speed.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Security/Trench/Trench_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom6</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <uiIconPath>Things/Security/Trench/Trench_MenuIcon</uiIconPath>
    <!-- <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount> -->
    <costList>
      <WoodLog>5</WoodLog>
    </costList>
    <statBases>
      <Mass>2</Mass>
      <MaxHitPoints>1500</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <minifiedDef>MinifiedThing</minifiedDef>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Floor</altitudeLayer>
    <passability>Standable</passability>
    <blockWind>false</blockWind>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.85</fillPercent>
    <pathCost>140</pathCost>    <!-- How difficult it is to cross the obstacle-->
    <pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <stealable>false</stealable>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <neverMultiSelect>false</neverMultiSelect>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <holdsRoof>false</holdsRoof>
    <designationCategory>Security</designationCategory>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <blockLight>false</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Things/Security/Trench/Trench_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
    <researchPrerequisites>
      <li>VFES_TrenchWarfare</li>
    </researchPrerequisites>
  </ThingDef>

  <!-- Ammo Crate -->

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>VFES_AmmoCrate</defName>
    <label>ammo crate</label>
    <description>An ammo crate useful for storing shells. Improves firing rate of surrounding soldiers.</description>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Security/AmmoCrate/AmmoCrate_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <startWickHitPointsPercent>0.9</startWickHitPointsPercent>
        <wickTicks>
          <min>0</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <Mass>15</Mass>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>1</Flammability>
    </statBases>
    <size>(1,1)</size>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>MortarShells</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>Fabrication</li>
    </researchPrerequisites>
    <designationCategory>Security</designationCategory>
  </ThingDef>

</Defs>